<!-- .forEach to get titles on the posts array instead of using a for loop -->
<% posts.forEach(function(post) { %>

  <h1><%= post.title %></h1>
  <p>
    <%= post.body.substring(0,100) + " ..." %>
    <a href="/posts/<%= post.title %>">Read More</a>
  </p>

<% }); %>


